.login
    .login__box
        .row.login__form
          form.col.s12(role='form', ng-submit="login()", name='loginForm', novalidate='', method='post')
            .row
              .input-field.col.s12
                //- i.material-icons.prefix account_circle
                input#Name.validate(type='text', ng-model='username')
                label(for='Name') Name
            .row
              .input-field.col.s12
                //- i.material-icons.prefix vpn_key
                input#Password.validate(type='password', ng-model='password')
                label(for='Password') Password
            button.btn.waves-effect.waves-light.submit(type='submit', name='action')
              | Submit
              i.material-icons.right send
